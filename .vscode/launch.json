{
    "configurations": [
        {
            "name": "Debug debug_solution_work_ladder",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/debug_solution_word_ladder",
            "args": [
                "wordlist-four-letters.txt"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build debug using makefile"
        }
    ],
    "version": "2.0.0"
}